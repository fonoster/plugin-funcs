  "name": "{{ lowerCase pckgName }}",
  "version": "{{ lowerCase pckgVersion }}",
  {{#if author}}
  "author": "{{ author }}",
  {{/if}}
  "main": "dist/index.js",
  {{#if pckgDesc}}
  "description": "{{ pckgDesc }}",
  {{/if}}
  "scripts": {
    "build": "tsc",
